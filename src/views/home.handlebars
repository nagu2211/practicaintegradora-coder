<section class="products">
  <h1>ALL PRODUCTS</h1>
  <div class="all-products">
    {{#each prodsPaginated}}
      <div class="product">
        <img src={{this.thumbnail}} alt="img-product" />
        <div class="product-info">
          <h4 class="product-title">{{this.title}}</h4>
          <p><span>id <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this._id}}</p>
          <p><span>description <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this.description}}</p>
          <p><span>code <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this.code}}</p>
          <p><span>stock <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this.stock}}k</p>
          <p><span>category <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this.category}}</p>
          <p><span>price <i class="fa-solid fa-arrow-down"></i></span><br
            />${{this.price}}(ARS)/k</p>
          <p><span>status <i class="fa-solid fa-arrow-down"></i></span><br
            />{{this.status}}</p>
            <button>Details</button> 
            <button onclick="putIntoCart('{{this._id}}')">Add Cart</button>
        </div>
      </div>
    {{/each}}
  </div>
  <h3>pagination</h3>
  <div>
    {{#if hasPrevPage}}
      <a href="/products?querypage={{prevPage}}&limit={{limit}}">⬅️</a>
    {{/if}}
    page
    {{page}}
    of
    {{totalPages}}
    {{#if hasNextPage}}
      <a href="/products?querypage={{nextPage}}&limit={{limit}}">➡️</a>
    {{/if}}

  </div>
</section>
<script src="/js/index.js"></script>