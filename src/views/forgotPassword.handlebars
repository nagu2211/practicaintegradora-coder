<section class="section-login animate__animated animate__fadeIn">
  <div class="vh-100 align-items-center d-flex justify-content-center">
    <div class="container w-75 bg-dark rounded shadow">
      <div class="row align-items-stretch">
        <div
          class="col bg-l-forgotPass-form d-none d-lg-block col-md-4 col-lg-5 col-xl-4 rounded"
        >
        </div>
        <div class="col bg-white ps-3 rounded-end">
          <div class="text-center">
            <img src="/images/Fresh.png" width="150px" alt="logo" />
          </div>
          <p>Don't worry, we will send you a code to reset your password</p>
          <form action="/api/sessions/forgotPassword" method="post">
            <div class="mb-4 dark">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" name="email" required />
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Send code</button>
            </div>

            <div class="my-3 dark">
              <span>Go to
                <a href="/login">Login</a></span><br />
              <span>Go to
                <a href="/register">Register</a></span><br />
                <span>Go to
                <a href="/">Home</a></span><br />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>