{{#each allUsers}}
  <div class='card'>
    <div class='card-header'>
      user :
      {{this.firstName}}
      {{this.lastName}}
    </div>
    <div class='card-body'>
      <h5 class='card-title'>first name : {{this.firstName}}</h5>
      <p class='card-text'>last name : {{this.lastName}}</p>
      <p class='card-text'>email : {{this.email}}</p>
      <p class='card-text'>role : {{this.role}} </p>
      <button class='btn btn-danger' onclick="deleteUser('{{this._id}}')">Delete user</button>
      <button class='btn btn-primary' onclick="changeRole('{{this._id}}')">Change role</button>
    </div>
  </div>
{{/each}}